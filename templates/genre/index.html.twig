{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}
    <h1>Genre index</h1>

    <table class="table table-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for genre in genres %}
            <tr>
                <td>{{ genre.id }}</td>
                <td>{{ genre.name }}</td>
                <td>
                    <a class="btn btn-sm btn-secondary" href="{{ path('app_genre_show', {'id': genre.id}) }}">Details</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('app_genre_edit', {'id': genre.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-light" href="{{ path('app_genre_new') }}"><i class="fa-solid fa-plus"></i> Nouveau genre</a>
{% endblock %}
